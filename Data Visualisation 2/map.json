{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Life expectancy at Year 2000",
  "width": 700,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/Jcyap28/FIT3179/main/ne_110m%20(1).json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgrey", "stroke": "black"},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Jcyap28/FIT3179/main/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Jcyap28/FIT3179/main/ne_110m%20(1).json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgrey"}
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/Jcyap28/FIT3179/main/Data%20Visualisation%202/data/Life%20Expectancy%20Data.csv"
            },
            "key": "Country",
            "fields": ["Life expectancy "]
          }
        }
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "field": "Life expectancy ",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [50, 55, 60, 65, 70, 75, 80],
            "range": [
              "#ffffe5",
              "#f7fcb9",
              "#d9f0a3",
              "#addd8e",
              "#78c679",
              "#41ab5d",
              "#238443",
              "#005a32"
            ]
          }
        },
        "tooltip": [
          {
            "field": "properties.NAME",
            "type": "nominal",
            "title": "Country : "
          },
          {
            "field": "Life expectancy ",
            "type": "quantitative",
            "title": "Life expectancy"
          }
        ]
      }
    },
    {
      "mark": {"type": "text", "dx": 50, "dy": 100, "fontSize": 10},
      "encoding": {"text": {"value": "gay"}}
    }
  ],
  "config": {}
}