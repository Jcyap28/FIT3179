{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,
  "height": 400,
  "title": "Life expectancy based on GDP",
  "data": {
    "url": "https://raw.githubusercontent.com/Jcyap28/FIT3179/main/Life%20Expectancy%20Data.csv"
  },
  "params": [
    {
      "name": "Year",
      "bind": {
        "input": "select",
        "options": [
          null,
          "2000",
          "2001",
          "2002",
          "2003",
          "2004",
          "2005",
          "2006",
          "2007",
          "2008",
          "2009",
          "2010",
          "2011",
          "2012",
          "2013",
          "2014",
          "2015"
        ],
        "labels": [
          "Show All",
          "2000",
          "2001",
          "2002",
          "2003",
          "2004",
          "2005",
          "2006",
          "2007",
          "2008",
          "2009",
          "2010",
          "2011",
          "2012",
          "2013",
          "2014",
          "2015"
        ],
        "name": "Year Selection: "
      }
    }
  ],
  "transform": [{"filter": "Year == null || datum.Year == Year"}],
  "mark": "circle",
  "encoding": {
    "x": {
      "field": "GDP",
      "type": "quantitative",
      "title": "GDP",
      "axis": {"tickCount": 7},
      "scale": {"type": "linear", "domain": [1, 120000]}
    },
    "y": {
      "field": "Life expectancy ",
      "type": "quantitative",
      "title": "Life expectancy",
      "axis": {"tickCount": 6},
      "scale": {"type": "linear", "domain": [1, 100]}
    },
    "color": {"field": "Country", "type": "nominal"},
    "size": {
      "field": "Adult Mortality",
      "type": "quantitative",
      "title": "Adult Mortality",
      "scale": {
        "type": "threshold",
        "domain": [400, 500, 600, 700],
        "range": [100, 300, 500, 600, 800]
      },
      "legend": {"format": ".1s"}
    },
    "tooltip": [
      {"field": "Country", "type": "nominal"},
      {"field": "GDP", "type": "quantitative", "format": ","},
      {
        "field": "Life expectancy ",
        "type": "quantitative",
        "title": "Life expectancy",
        "format": ","
      },
      {"field": "Adult Mortality", "type": "quantitative", "format": ","}
    ]
  },
  "config": {}
}